<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oc.cryptography.notepad2.Controller">
    <padding>
        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
    </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#clearTextArea" text="New" />
               <MenuItem fx:id="openOption" mnemonicParsing="false" onAction="#openTextFile" text="Open..." />
               <MenuItem fx:id="saveOption" mnemonicParsing="false" onAction="#openSaveDialog" text="Save As..." />
               <MenuItem fx:id="encryptedSaveOption" mnemonicParsing="false" onAction="#openEncryptedSaveDialog" text="Encrypted Save As..." />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <TextArea fx:id="textArea" prefHeight="400.0" prefWidth="599.0" promptText="Type here!" wrapText="true">
      <font>
         <Font name="Consolas" size="14.0" />
      </font>
   </TextArea>
</VBox>
